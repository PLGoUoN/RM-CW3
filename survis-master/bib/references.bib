  URL = {https://www.researchgate.net/publication/342421493_Gender_and_Generational_Differences_in_Consumers'_Perceptions_of_Internet_of_Things_IoT_Devices},
keywords={type:The impact of gender and generation on attitudes towards IoT devices
,Gender
,Generational differences
,Consumers’ perceptions
