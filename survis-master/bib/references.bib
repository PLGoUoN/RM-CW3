@INPROCEEDINGS{2020 IEEE Security and Privacy Workshops (SPW),
  author={Janes, Blake and Crawford, Heather and OConnor, TJ},
  booktitle={2020 IEEE Security and Privacy Workshops (SPW)}, 
keywords = {
type:Information Security and the Internet of Things
